enum OrderStatus {
  PENDING
  PREPARING
  READY
  DELIVERED
  CANCELLED
}

model orders {
  id                String          @id @default(uuid())
  meal_title        String
  meal_id           String
  meal              meals           @relation(fields: [meal_id], references: [id], onDelete: Cascade)
  customerId        String
  user              User            @relation(fields: [customerId], references: [id], onDelete: Cascade)
  providerProfileId String
  provider          providerProfile @relation(fields: [providerProfileId], references: [id], onDelete: Cascade)
  total_amount      Int
  status            OrderStatus     @default(PENDING)
  delivery_address  String
  created_at        DateTime        @default(now())
  updated_at        DateTime        @updatedAt
}
